@page
@model WebApp.Frontend.Pages.BuyingTickets.BuyTicketModel

<h3>Buying a ticket</h3>
<hr />

<h5 class="font-weight-bold">Please verify that all data are correct</h5>
<div class="justify-content-md-center">
    <div class="row justify-content-center">
        <b class="col-sm-2">
            @Html.DisplayName("Departure time:")
        </b>
        <div class="col-sm-2">
            @Html.DisplayFor(model => model.Ticket.DepartureTime)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("Arrival time:")
        </b>
        <div class="col-sm-2">
            @Html.DisplayFor(model => model.Ticket.ArrivalTime)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("From:")
        </b>
        <div class="col-sm-2">
            @Html.DisplayFor(model => model.Ticket.StartingStation)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("To:")
        </b>
        <div class="col-sm-2">
            @Html.DisplayFor(model => model.Ticket.FinalStation)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("Train identifier:")
        </b>
        <div class="col-sm-2">
            @Html.DisplayFor(model => model.Ticket.TrainIdentifier)
        </div>
        <div class="w-100"></div>
    </div>
    
    <div class="custom-container justify-content-center">
        <form asp-page-handler="cancel" method="post" style="margin-top: 1rem; float: left; width: 160px;">
            <input type="submit" value="Back to List" class="btn btn-secondary"/>
            <input asp-for="Ticket.SeatReservationId" type="hidden" name="SeatReservationId"/>
        </form>
        <form method="post" style="margin-top: 1rem; float: right; width: 160px;">
            <input asp-for="Ticket.TrainId" type="hidden" id="hiddenTrainId" name="TrainId"/>
            <input asp-for="Ticket.RouteId" type="hidden" id="hiddenRouteId" name="RouteId"/>
            <input asp-for="Ticket.SeatReservationId" type="hidden" id="hiddenSeatReservationId" name="SeatReservationId"/>
            <input type="submit" value="Buy ticket" class="btn btn-success"/>
        </form>
    </div>
</div>