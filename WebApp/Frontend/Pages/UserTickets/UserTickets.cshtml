@page
@model WebApp.Frontend.Pages.UserTickets.UserTicketsModel

<h3>Your tickets</h3>

<div class="row">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Tickets.First().StartingStation)</th>
            <th>@Html.DisplayNameFor(model => model.Tickets.First().FinalStation)</th>
            <th>@Html.DisplayNameFor(model => model.Tickets.First().DepartureTime)</th>
            <th>@Html.DisplayNameFor(model => model.Tickets.First().ArrivalTime)</th>
            <th>@Html.DisplayNameFor(model => model.Tickets.First().TrainIdentifier)</th>
            <th>Actions</th>
        </tr>
        </thead>
        
        @if (!Model.Tickets.Any())
        {
            <tbody>
            </tbody>
            return;
        }

        <tbody>
        
        @foreach (var item in Model.Tickets)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.StartingStation)</td>
                <td>@Html.DisplayFor(modelItem => item.FinalStation)</td>
                <td>@Html.DisplayFor(modelItem => item.DepartureTime.TimeOfDay)</td>
                <td>@Html.DisplayFor(modelItem => item.ArrivalTime.TimeOfDay)</td>
                <td>@Html.DisplayFor(modelItem => item.TrainIdentifier)</td>
                <td>
                    <a asp-page="/ReturningTickets/ReturnTicket" asp-route-id="@item.Id" class="btn btn-warning">Return</a>
                    <a asp-page="/UserTickets/Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>