@page
@model WebApp.Frontend.Pages.ReturningTickets.ReturnTicketModel

<h3>Returning the ticket</h3>
<hr />

<h5 class="font-weight-bold">Are you sure you want to return this ticket?</h5>
<div class="justify-content-md-center">
    <div class="row justify-content-center">
        <b class="col-sm-2">
            @Html.DisplayName("Departure time:")
        </b>
        <div class="col-sm-4">
            @Html.DisplayFor(model => model.Ticket.DepartureTime)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("Arrival time:")
        </b>
        <div class="col-sm-4">
            @Html.DisplayFor(model => model.Ticket.ArrivalTime)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("From:")
        </b>
        <div class="col-sm-4">
            @Html.DisplayFor(model => model.Ticket.StartingStation)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("To:")
        </b>
        <div class="col-sm-4">
            @Html.DisplayFor(model => model.Ticket.FinalStation)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("Train identifier:")
        </b>
        <div class="col-sm-4">
            @Html.DisplayFor(model => model.Ticket.TrainIdentifier)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("Car number:")
        </b>
        <div class="col-sm-4">
            @Html.DisplayFor(model => model.Ticket.Car)
        </div>
        <div class="w-100"></div>
        <b class="col-sm-2">
            @Html.DisplayName("Seat number:")
        </b>
        <div class="col-sm-4">
            @Html.DisplayFor(model => model.Ticket.SeatNumber)
        </div>
        <div class="w-100"></div>
    </div>

    <form method="post" class="container" style="margin-top: 1rem; max-width: 50%;">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label>Generic reason of return:</label>
            <select asp-items="@Model.GenericReasonsOfReturn" name="GenericReasonOfReturn" class="form-control"></select>
            <span asp-validation-for="@Model.GenericReasonsOfReturn" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Personal reason of return:</label>
            <input asp-for="@Model.PersonalReasonOfReturn" class="form-control"/>
            <span asp-validation-for="@Model.PersonalReasonOfReturn" class="text-danger"></span>
        </div>
        <a class="btn btn-secondary" asp-page="/UserTickets/UserTickets">Back to my tickets</a>
        <input type="submit" value="Return ticket" class="btn btn-warning"/>
    </form>
</div>
